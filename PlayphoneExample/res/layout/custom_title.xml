<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
	android:id="@+id/screen"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingRight="0dp">
    <TextView android:layout_weight="0" android:layout_width="50dip" android:text="" android:layout_height="match_parent"></TextView>
    <TextView android:layout_height="match_parent" style="@style/customtheme_title" android:layout_gravity="right" android:text="@string/app_name" android:id="@+id/custom_title_field" android:layout_width="match_parent" android:layout_weight="0.6"></TextView>
    <Button android:text="Home" android:layout_width="wrap_content" style="@style/CustomTheme" android:id="@+id/btnHome" android:layout_weight="0" android:layout_height="44dip"></Button>
</LinearLayout>
