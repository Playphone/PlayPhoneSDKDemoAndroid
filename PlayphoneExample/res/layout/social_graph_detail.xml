<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:id="@+id/relativeLayout1" android:layout_height="match_parent">
        <include layout="@layout/breadcrumbs" android:layout_width="match_parent" android:id="@+id/incBreadCrumbs" android:layout_height="wrap_content" android:layout_alignParentTop="true"></include>
        <TextView android:layout_height="wrap_content" android:textAppearance="?android:attr/textAppearanceMedium" android:layout_alignParentLeft="true" android:layout_width="match_parent" android:layout_below="@id/incBreadCrumbs" android:text="Information title" android:id="@+id/infoTitle"></TextView>
        <ScrollView android:layout_width="match_parent" android:layout_below="@id/infoTitle" android:layout_height="match_parent" android:scrollbarAlwaysDrawVerticalTrack="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView android:layout_marginTop="10dp" android:layout_marginBottom="10dp" android:id="@+id/avatarImage" android:scaleType="fitXY" android:layout_below="@+id/infoTitle" android:layout_marginLeft="30dp" android:layout_height="80dp" android:layout_width="80dp"></ImageView>
        <TableLayout android:layout_below="@+id/avatarImage" android:orientation="vertical" android:layout_width="match_parent" android:layout_margin="5dp" android:layout_height="wrap_content" android:id="@+id/infoTable">
        </TableLayout>
        </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
